<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="@dimen/dp_72"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:paddingLeft="@dimen/dp_24"
                  android:background="@android:color/white"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout android:orientation="horizontal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

            <FrameLayout android:layout_width="wrap_content"
                         android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ic_done_step"
                        android:padding="@dimen/dp_9"
                        android:translationZ="1dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView android:translationZ="1dp"
                          android:layout_gravity="center"
                          android:textSize="@dimen/sp_12"
                          android:textColor="@android:color/white"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="1"/>

            </FrameLayout>

            <TextView android:translationZ="1dp"
                      android:layout_gravity="center"
                      android:textSize="@dimen/sp_12"
                      android:textColor="@android:color/black"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/dp_8"
                      android:text="Compass"/>

        </LinearLayout>

        <View android:layout_width="110dp"
              android:layout_height="1dp"
              android:layout_marginLeft="@dimen/dp_8"
              android:layout_marginRight="@dimen/dp_8"
              android:background="@color/colorGray"/>

        <LinearLayout android:orientation="horizontal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

            <FrameLayout android:layout_width="wrap_content"
                         android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ic_step"
                        android:padding="@dimen/dp_9"
                        android:translationZ="1dp"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView android:translationZ="1dp"
                          android:layout_gravity="center"
                          android:textSize="@dimen/sp_12"
                          android:textColor="@android:color/white"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="2"/>

            </FrameLayout>

            <TextView android:translationZ="1dp"
                      android:layout_gravity="center"
                      android:textSize="@dimen/sp_12"
                      android:textColor="@android:color/black"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/dp_8"
                      android:text="Final Step"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>