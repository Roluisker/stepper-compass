<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:minHeight="@dimen/dp_72"
                                                   android:layout_height="@dimen/dp_72">

    <ImageView
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/firstTitle"
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_done_step"
            android:translationZ="1dp"
            android:id="@+id/firstStep"/>

    <TextView android:translationZ="1dp"
              android:layout_gravity="center"
              android:textSize="@dimen/sp_12"
              android:textColor="@android:color/white"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1"
              app:layout_constraintEnd_toEndOf="@+id/firstStep" app:layout_constraintStart_toStartOf="@+id/firstStep"
              app:layout_constraintTop_toTopOf="@+id/firstStep"
              app:layout_constraintBottom_toBottomOf="@+id/firstStep"/>

    <TextView
            android:translationZ="1dp"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Compass"
            android:id="@+id/firstTitle"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/stepLine" android:layout_marginEnd="8dp"/>

    <View android:id="@+id/stepLine"
          android:layout_width="80dp"
          android:minWidth="80dp"
          android:layout_height="1dp"
          android:background="@color/colorGray"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
          app:layout_constraintHorizontal_bias="0.59"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_step"
            android:padding="@dimen/dp_9"
            android:translationZ="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/stepLine"
            android:id="@+id/secondStep" android:layout_marginStart="8dp"/>

    <TextView android:translationZ="1dp"
              android:layout_gravity="center"
              android:textSize="@dimen/sp_12"
              android:textColor="@android:color/white"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="2"
              app:layout_constraintEnd_toEndOf="@+id/secondStep"
              app:layout_constraintStart_toStartOf="@+id/secondStep"
              app:layout_constraintTop_toTopOf="@+id/secondStep"
              app:layout_constraintBottom_toBottomOf="@+id/secondStep"/>

    <TextView android:translationZ="1dp"
              android:layout_gravity="center"
              android:textSize="@dimen/sp_14"
              android:textColor="@android:color/black"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Final Step"
              android:id="@+id/secondTitle"
              android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toEndOf="@+id/secondStep" android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>